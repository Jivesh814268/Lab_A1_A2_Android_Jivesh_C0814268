<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardcolor"
    tools:context=".ProductDetails">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detailimg"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
         />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="30sp"
        android:layout_marginLeft="12sp"
        android:layout_marginRight="12sp"
        android:layout_below="@id/detailimg"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="30sp"
                >  <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Product ID"
                android:textColor="@color/black"
                android:fontFamily="@font/opensansbold"
                android:textSize="15sp"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:layout_margin="5sp"
                    android:id="@+id/productiddetail"
                    android:fontFamily="@font/opensanssemibold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Product Name"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensansbold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="iPhone 13 Pro Max"
                    android:layout_margin="5sp"
                    android:id="@+id/producttitledetail"
                    android:fontFamily="@font/opensanssemibold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Product Description"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensansbold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Smart Lens, Everything smart"
                    android:layout_margin="5sp"
                    android:id="@+id/productdescriptiondetail"
                    android:fontFamily="@font/opensanssemibold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Product Price"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensansbold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="50,000INR"
                    android:layout_margin="5sp"
                    android:id="@+id/productpricedetail"
                    android:fontFamily="@font/opensansbolditalic"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Provider's Name"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensansbold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Apple"
                    android:layout_margin="5sp"
                    android:id="@+id/providernamedetail"
                    android:fontFamily="@font/opensanssemibold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Provider's E-mail Address"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensansbold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Apple@icloud.com"
                    android:layout_margin="5sp"
                    android:id="@+id/provideremaildetail"
                    android:fontFamily="@font/opensanssemibold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Provider's Phone Number"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensansbold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+92-3471582966"
                    android:layout_margin="5sp"
                    android:id="@+id/providerphonenumberdetail"
                    android:fontFamily="@font/opensanssemibold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Provider's Location"
                    android:textColor="@color/black"
                    android:fontFamily="@font/opensansbold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Null"
                    android:layout_margin="5sp"
                    android:id="@+id/providerlocationdetail"
                    android:fontFamily="@font/opensanssemibold"
                    android:textSize="15sp"
                    />

            </LinearLayout>





        </ScrollView>



    </androidx.cardview.widget.CardView>

</RelativeLayout>

</ScrollView>