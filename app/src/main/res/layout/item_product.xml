<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3sp"
        app:cardBackgroundColor="@color/cardcolor"
        app:cardCornerRadius="10sp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:id="@+id/productimg"
                android:src="@drawable/sampleimg"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10sp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title of Product"
                    android:id="@+id/producttitle"
                    android:textColor="@color/white"
                    android:fontFamily="@font/opensanssemibold"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/productdescription"
                    android:text="Description of Product"
                    android:textColor="@color/white"
                    android:layout_marginTop="6sp"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="10sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Provider"
                    android:id="@+id/productprovider"
                    android:drawableLeft="@drawable/provider"
                    android:textColor="@color/white"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/opensansregular"
                    android:textSize="10sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:id="@+id/productprice"
            android:textColor="@color/white"
            android:layout_margin="15sp"
android:visibility="gone"
            android:layout_gravity="bottom|right"
            android:fontFamily="@font/opensansemiitalicbold"
            android:textSize="18sp"
            />




    </androidx.cardview.widget.CardView>

</RelativeLayout>